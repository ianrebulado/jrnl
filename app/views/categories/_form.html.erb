<div class="p-4 mt-16 flex items-center justify-center">
  <%= form_with model: @category do |form| %>
  <div class="flex flex-col gap-4 border rounded-md p-8 justify-center items-center bg-slate-900 text-white">
    <%= form.label "Category name:" %>
    <%= form.text_field :name, class: "text-black" %>
    <%= form.button class: "p-3 bg-green-700 rounded-md"%>
    </div>
  <% end %>
</div>