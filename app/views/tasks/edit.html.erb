<div class="bg-slate-900 text-white min-h-screen flex flex-col p-4">
  <h1 class="font-bold text-3xl p-5 mb-2">Editing task</h1>

<%= form_with model: @task, url: category_task_path(@category, @task), method: :patch do |form| %>
<div class="flex flex-col gap-4 border rounded-md p-8 justify-start items-start bg-slate-900 text-white"">
  <%= form.label :task_name %>
  <%= form.text_field :task_name, class: "text-black w-1/4"%>
  
  <%= form.label :due_date %>
  <%= form.date_field :due_date, class: "text-black w-1/4" %>

  <%= form.submit :Edit, class: "text-white p-4 border rounded-md bg-green-700 w-1/4" %>
<% end %>
  <%= button_to "Delete", category_task_path(@category, @task), method: :delete, class: "text-white p-4 border rounded-md bg-red-700" %>
</div>
</div>
